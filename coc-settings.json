{
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "python",
    "javascriptreact",
    "typescript.tsx",
    "graphql",
    "go"
  ],
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  // Go settings
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
}
